<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lettre_1"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:background="#FFB6B6"
            android:hint="?"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/lettre_2"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:background="#FFB6B6"
            android:hint="?"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/lettre_3"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:background="#FFB6B6"
            android:hint="?"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/lettre_4"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:background="#FFB6B6"
            android:hint="?"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/lettre_5"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:background="#FFB6B6"
            android:hint="?"
            android:textAlignment="center"
            android:textSize="48sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/lettreDevine"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="\?"
        android:inputType="textCapCharacters"
        android:maxLength="1"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="297dp"
        android:text="VÃ©rifier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="49dp"
        android:text="Devinez une lettre"
        android:textAlignment="textStart"
        android:textColor="#348DFA"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/lettreDevine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>